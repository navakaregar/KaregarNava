{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>ShortDescription</th>
                <td>{{ event.shortDescription }}</td>
            </tr>
            <tr>
                <th>FullDescription</th>
                <td>{{ event.fullDescription }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ event.score }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ event.createdAt ? event.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ event.updatedAt ? event.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Organizer</th>
                <td>{{ event.organizer }}</td>
            </tr>
            <tr>
                <th>StartDateTime</th>
                <td>{{ event.startDateTime ? event.startDateTime|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndDateTime</th>
                <td>{{ event.endDateTime ? event.endDateTime|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_event_index') }}">back to list</a>

    <a href="{{ path('app_event_edit', {'id': event.id}) }}">edit</a>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}
